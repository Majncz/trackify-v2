generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  password       String
  tasks          Task[]
  passwordResets PasswordReset[]

  @@map("trackify_user")
}

model PasswordReset {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("trackify_password_reset")
}

model Task {
  id     String  @id @default(uuid())
  name   String
  hidden Boolean @default(false)
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  events Event[]

  @@map("trackify_task")
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  duration  Int      // milliseconds
  name      String   @default("Time entry")
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("trackify_event")
}
